
<div class="container">
  <h1>New game</h1>
  <ul>
    <% @letters.each do |letter| %>
      <li class="letter"> <%= letter %>
    <% end %>
  </ul>
  <h2>What's the longest word you can find?</h2>
  <div class="form">
    <form action="score" method="post">
      <input type="text" name="word" id="input">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="submit" value="Play" id="button">
    </form>
  </div>

</div>
